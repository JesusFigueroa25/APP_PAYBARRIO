<Window x:Class="Presentacion.ChooseCreditos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        WindowState="Maximized"
WindowStyle="None"
ResizeMode="NoResize"
        Title="ChooseCreditos" Height="768" Width="1366">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/ChoseCredito.png"/>
        </Grid.Background>
        <Button x:Name="btnFuturo" Content="Valor Futuro" HorizontalAlignment="Left" Margin="552,514,0,0" VerticalAlignment="Top" Height="62" Width="300" Background="White" Foreground="#FF099A62" FontSize="28" FontFamily="Arial Black" Click="btnFuturo_Click">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="btnAnualidad" Content="Anualidad" HorizontalAlignment="Left" Margin="552,581,0,0" VerticalAlignment="Top" Height="62" Width="300" Background="White" Foreground="#FF099A62" FontSize="28" FontFamily="Arial Black" Click="btnAnualidad_Click">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="btnRegresar" Content="Regresar" HorizontalAlignment="Left" Margin="552,653,0,0" VerticalAlignment="Top" Height="56" Width="300" Background="White" Foreground="#FF099A62" FontSize="28" FontFamily="Arial Black" Click="btnRegresar_Click" />

    </Grid>
</Window>
