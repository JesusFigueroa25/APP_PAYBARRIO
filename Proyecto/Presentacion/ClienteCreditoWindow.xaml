<Window x:Class="Presentacion.ClienteCreditoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        WindowState="Maximized"
WindowStyle="None"
ResizeMode="NoResize"
        Title="ClienteCreditoWindow" Height="768" Width="1366">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Cliente_Credito.png"/>
        </Grid.Background>
        <Button x:Name="btnClientes" Content="Clientes" HorizontalAlignment="Left" Margin="298,554,0,0" VerticalAlignment="Top" Width="204" Height="75" Click="btnClientes_Click" Background="White" Foreground="#FF099A62" FontSize="28" FontFamily="Arial Black">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="btnCreditos" Content="Creditos" HorizontalAlignment="Left" Margin="874,554,0,0" VerticalAlignment="Top" Height="75" Width="214" Click="btnCreditos_Click" Background="White" FontSize="28" FontWeight="Bold" FontFamily="Arial Black" Foreground="#FF099A62">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="btnCerrarSesion" Content="Cerrar Sesión" HorizontalAlignment="Left" Margin="1051,43,0,0" VerticalAlignment="Top" Height="69" Width="260"  Background="Red" FontSize="28" FontFamily="Arial Black" FontWeight="Bold" Foreground="White" Click="btnCerrarSesion_Click" >
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>

    </Grid>
</Window>
