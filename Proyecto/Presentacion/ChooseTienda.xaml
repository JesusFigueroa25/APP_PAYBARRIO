<Window x:Class="Presentacion.ChooseTienda"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        WindowState="Maximized"
WindowStyle="None"
ResizeMode="NoResize"
        Title="ChooseTienda" Height="768" Width="1366">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Tienda_Login.png"/>
        </Grid.Background>
        <Button x:Name="btnLoginTienda" Content="INICIAR &#xA;SESION" HorizontalAlignment="Left" Margin="923,284,0,0" VerticalAlignment="Top" Height="85" Width="232" Background="White" Foreground="#FF099A62" FontSize="27" FontFamily="Arial Black" FontWeight="Bold" Click="btnLoginTienda_Click">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="btnRegistroTienda" Content="REGISTRARSE" HorizontalAlignment="Left" Margin="923,424,0,0" VerticalAlignment="Top" Height="84" Width="232" Background="White" Foreground="#FF099A62" FontSize="27" FontFamily="Arial Black" FontWeight="Bold" Click="btnRegistroTienda_Click">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="btnRegresar" Content="Regresar" HorizontalAlignment="Left" Margin="923,565,0,0" VerticalAlignment="Top" Height="66" Width="232" Background="White" Foreground="#FF099A62" FontSize="30" FontFamily="Arial Black" RenderTransformOrigin="0.521,0.44" Click="btnRegresar_Click" >
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>

    </Grid>
</Window>
