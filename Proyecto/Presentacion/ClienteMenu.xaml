<Window x:Class="Presentacion.ClienteMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
         WindowState="Maximized"
 WindowStyle="None"
 ResizeMode="NoResize"
        Title="ClienteMenu" Height="768" Width="1366">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/ClienteMenu.png"/>
        </Grid.Background>
        <Button x:Name="btnEstado" Content="Perfil" HorizontalAlignment="Center" Margin="0,546,0,0" VerticalAlignment="Top" Width="185" Height="75" Background="White" Foreground="#FF099A62" FontSize="28" FontFamily="Arial Black" Click="btnEstado_Click">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="btnRegresar" Content="Cerrar Sesión" HorizontalAlignment="Left" Margin="1091,44,0,0" VerticalAlignment="Top" Height="69" Width="237" Background="#FFEA1010" Foreground="White" FontSize="30" FontFamily="Arial Black" RenderTransformOrigin="0.521,0.44" Click="btnRegresar_Click" >
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>

    </Grid>
</Window>
