<Window x:Class="Presentacion.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="LoginWindow" Height="768" Width="1366">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Tienda_Login.png"/>
        </Grid.Background>
        <Button Content="INICIAR &#xD;&#xA;SESION" HorizontalAlignment="Left" Margin="947,558,0,0" VerticalAlignment="Top" Height="85" Width="232" Click="Button_Click" Background="White" Foreground="#FF099A62" FontSize="27" FontFamily="Arial Black" FontWeight="Bold">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <TextBox x:Name="tb_Contrasenia" HorizontalAlignment="Left" Margin="912,377,0,0" TextWrapping="Wrap" Text="Contraseña" VerticalAlignment="Top" Width="302" Height="54" FontSize="24" FontFamily="Arial" VerticalContentAlignment="Center" Foreground="#FF5B3434" BorderBrush="White" FontWeight="Bold"/>
        <TextBox x:Name="tb_RUC" HorizontalAlignment="Left" Margin="912,255,0,0" TextWrapping="Wrap" Text="RUC" VerticalAlignment="Top" Width="302" Height="51" FontSize="24" FontFamily="Arial" VerticalContentAlignment="Center" Foreground="#FF5B3434" BorderBrush="White" FontWeight="Bold"/>
        <Button x:Name="btnSalir" Content="Regresar" HorizontalAlignment="Left" Margin="947,664,0,0" VerticalAlignment="Top" Height="62" Width="232"  Background="White" FontSize="27" FontFamily="Arial Black" FontWeight="Bold" Foreground="#FF099A62" Click="btnSalir_Click" >
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>

    </Grid>
</Window>
