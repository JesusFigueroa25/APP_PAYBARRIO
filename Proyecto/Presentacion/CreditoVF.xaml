<Window x:Class="Presentacion.CreditoVF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        WindowState="Maximized"
WindowStyle="None"
ResizeMode="NoResize"
        Title="CreditoVF"  Height="768" Width="1366">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Fondo.png"/>
        </Grid.Background>
        <Button x:Name="btnRegresar" Content="Regresar" HorizontalAlignment="Left" Margin="258,10,0,0" VerticalAlignment="Top" Height="81" Width="216" Background="White" Foreground="#FF099A62" FontSize="36" FontFamily="Arial Black" Click="btnRegresar_Click" BorderBrush="White"/>
        <DataGrid
            x:Name="dgCreditos" Margin="168,364,104,57" RenderTransformOrigin="0.5,0.5" Background="White"  
            AutoGenerateColumns="True" SelectionChanged="dgCreditos_SelectionChanged"
            />
        <Button x:Name="btnAgregarCredito" Content="Registrar" HorizontalAlignment="Left" Margin="444,296,0,0" VerticalAlignment="Top" Height="47" Width="200"  Background="#FFDDFF0C" Foreground="#FF099A62" FontSize="35" FontFamily="Arial Black" RenderTransformOrigin="2.467,-1.618" Click="btnAgregarCredito_Click">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="btnDetalle" Content="Detalle" HorizontalAlignment="Left" Margin="934,10,0,0" VerticalAlignment="Top" Height="81" Width="240"  Background="White" Foreground="#FF099A62" FontSize="36" FontFamily="Arial Black" BorderBrush="White" Click="btnDetalle_Click" />
        <Button x:Name="btnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="719,296,0,0" VerticalAlignment="Top" Height="47" Width="188"   Background="#FFDDFF0C" Foreground="#FF099A62" FontSize="35" FontFamily="Arial Black" Click="btnEliminar_Click" RenderTransformOrigin="1.782,0.5" >
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="btnMenu" Content="Menu" HorizontalAlignment="Left" Margin="604,17,0,0" VerticalAlignment="Top" Height="74" Width="240"   Background="White" Foreground="#FF099A62" FontSize="36" FontFamily="Arial Black" Click="btnMenu_Click" BorderBrush="White"   />
        <ComboBox x:Name="cbCliente" HorizontalAlignment="Left" Margin="346,157,0,0" VerticalAlignment="Top" Width="288" FontSize="20" Height="40"/>
        <Label Content="Monto Credito" HorizontalAlignment="Left" Margin="84,209,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial Black" Height="48" Width="256" FontSize="30" Foreground="#FF1F1A1A"/>
        <Label Content="TEA %" HorizontalAlignment="Left" Margin="808,211,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Height="48" Width="120" FontSize="30" Foreground="#FF1F1A1A"/>
        <TextBox x:Name="tbMontoCredito" HorizontalAlignment="Left" Margin="346,209,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="288" Height="40" FontSize="30"/>
        <TextBox x:Name="tbTEA" HorizontalAlignment="Left" Margin="954,213,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="288" Height="40" FontSize="30"/>
        <Label Content="Cliente" HorizontalAlignment="Left" Margin="188,153,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial Black" Height="46" Width="144" FontSize="30" Foreground="#FF1F1A1A"/>
        <Label Content="Fecha Compra" HorizontalAlignment="Left" Margin="712,155,0,0" VerticalAlignment="Top" FontSize="28" FontFamily="Arial Black" Height="49" Width="242" Foreground="#FF1F1A1A"/>
        <DatePicker x:Name="dateCompra" HorizontalAlignment="Left" Margin="954,153,0,0" VerticalAlignment="Top" Foreground="Black" Background="White" Height="50" Width="288" FontSize="28"/>

    </Grid>
</Window>
