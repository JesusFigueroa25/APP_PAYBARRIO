<Window x:Class="Presentacion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="MainWindow" Height="768" Width="1366">

    <Grid>


        <Grid.Background>
            <ImageBrush ImageSource="/MainChoosee.png"/>
        </Grid.Background>
        <Button x:Name="btnTienda" Content="TIENDA" HorizontalAlignment="Left" Margin="833,341,0,0" VerticalAlignment="Top" BorderBrush="White" Height="64" Width="250" Foreground="White" FontSize="32" FontFamily="Arial Black"  Background="#FF4DBC85" FontWeight="Bold" Click="btnTienda_Click"/>
        <Button x:Name="btnCliente" Content="CLIENTE" HorizontalAlignment="Left" Margin="833,445,0,0" VerticalAlignment="Top" BorderBrush="White" Height="64" Width="250" Foreground="White" FontSize="32" FontFamily="Arial Black"  Background="#FF4DBC85" FontWeight="Bold" Click="btnCliente_Click"/>
        <Button x:Name="btnRegresar" Content="Salir" HorizontalAlignment="Left" Margin="145,614,0,0" VerticalAlignment="Top" Height="66" Width="232" Background="#FFE81A1A" Foreground="White" FontSize="30" FontFamily="Arial Black" RenderTransformOrigin="0.521,0.44" Click="btnRegresar_Click" >
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
    </Grid>
</Window>
