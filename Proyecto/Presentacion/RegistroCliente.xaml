<Window x:Class="Presentacion.RegistroCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        WindowState="Maximized"
WindowStyle="None"
ResizeMode="NoResize"
        Title="RegistroCliente" Height="768" Width="1366">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/registroCliente.png"/>
        </Grid.Background>
        <TextBox x:Name="tbNombre" HorizontalAlignment="Left" Margin="785,155,0,0" TextWrapping="Wrap" Text="Nombre" Width="392" Height="36" Background="#FFD9D9D9" VerticalAlignment="Top" FontSize="32" FontFamily="Arial" HorizontalContentAlignment="Center" Foreground="#FF4E4040"/>
        <TextBox x:Name="tbTelefono" HorizontalAlignment="Left" Margin="785,278,0,0" TextWrapping="Wrap" Text="Telefono" Width="392" Height="40" Background="#FFD9D9D9" VerticalAlignment="Top" FontSize="32" FontFamily="Arial" HorizontalContentAlignment="Center" Foreground="#FF4E4040"/>
        <TextBox x:Name="tbCorreoElectronico" HorizontalAlignment="Left" Margin="785,345,0,0" TextWrapping="Wrap" Text="Correo electronico" Width="392" Height="42" Background="#FFD9D9D9" VerticalAlignment="Top" FontSize="32" FontFamily="Arial" HorizontalContentAlignment="Center" Foreground="#FF4E4040"/>
        <TextBox x:Name="tbDireccion" HorizontalAlignment="Left" Margin="785,408,0,0" TextWrapping="Wrap" Text="Dirección" Width="392" Height="40" VerticalAlignment="Top" FontSize="32" FontFamily="Arial" HorizontalContentAlignment="Center" Background="#FFD9D9D9" Foreground="#FF4E4040"/>
        <TextBox x:Name="tbContrasenia" HorizontalAlignment="Left" Margin="785,480,0,0" TextWrapping="Wrap" Text="Contraseña" Width="392" Height="42" Background="#FFD9D9D9" VerticalAlignment="Top" FontSize="32" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF4E4040"/>
        <Button x:Name="btnRegistrate" Content="REGISTRATE" HorizontalAlignment="Left" Margin="856,625,0,0" VerticalAlignment="Top" BorderBrush="White" Height="64" Width="250" Foreground="White" FontSize="32" FontFamily="Arial Black"  Background="#FF4DBC85" FontWeight="Bold" Click="btnRegistrate_Click"/>
        <Button x:Name="btnIniciarSesion" Content="INICIAR &#xA;SESION" HorizontalAlignment="Left" Margin="156,566,0,0" VerticalAlignment="Top" Height="72" Width="204"  Background="White" FontSize="28" FontFamily="Arial Black" FontWeight="Bold" Foreground="#FF099A62" Click="btnIniciarSesion_Click">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="btnSalir" Content="Regresar" HorizontalAlignment="Left" Margin="156,658,0,0" VerticalAlignment="Top" Height="62" Width="204"  Background="White" FontSize="28" FontFamily="Arial Black" FontWeight="Bold" Foreground="#FF099A62" Click="btnSalir_Click">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <TextBox x:Name="tbDNI" HorizontalAlignment="Left" Margin="785,217,0,0" TextWrapping="Wrap" Text="DNI" Width="392" Height="37" Background="#FFD9D9D9" VerticalAlignment="Top" FontSize="32" FontFamily="Arial" HorizontalContentAlignment="Center" Foreground="#FF4E4040"/>
        <TextBox x:Name="tbSaldo" HorizontalAlignment="Left" Margin="785,545,0,0" TextWrapping="Wrap" Text="Saldo Disponible" Width="392" Height="42" Background="#FFD9D9D9" VerticalAlignment="Top" FontSize="32" FontFamily="Arial" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF4E4040"/>

    </Grid>
</Window>
