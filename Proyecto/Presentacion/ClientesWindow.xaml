<Window x:Class="Presentacion.ClientesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        
        mc:Ignorable="d"
        WindowState="Maximized"
WindowStyle="None"
ResizeMode="NoResize"
        Title="ClientesWindow" Height="768" Width="1366">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Fondo.png"/>
        </Grid.Background>
        <Button x:Name="btnAgregarCliente" Content="" HorizontalAlignment="Left" Margin="1229,671,0,0" VerticalAlignment="Top" Height="58" Width="84" Click="btnAgregarCliente_Click" RenderTransformOrigin="1.286,1.411">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0"/>
            </Button.Background>
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <DataGrid x:Name="dgClientesTienda" Margin="723,159,177,291" RenderTransformOrigin="0.5,0.5" Background="White" BorderBrush="#FF2B7DCC" SelectionChanged="dgClientesTienda_SelectionChanged"  />
        <Button x:Name="btnRegresar_Copiar" Content="Regresar" HorizontalAlignment="Left" Margin="258,22,0,0" VerticalAlignment="Top" Height="70" Width="290" Click="btnRegresar_Click" Background="White" Foreground="#FF099A62" FontSize="28" FontFamily="Arial Black">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="btnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="258,463,0,0" VerticalAlignment="Top" Height="82" Width="290" Click="btnEliminar_Click" Background="#FFDDFF0C" FontSize="28" FontFamily="Arial Black" Foreground="#FF099A62" >
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="btnRegistrarCliente" Content="Registrar" HorizontalAlignment="Left" Margin="258,371,0,0" VerticalAlignment="Top" Height="72" Width="290" Click="btnRegistrarCliente_Click" Background="#FFDDFF0C" Foreground="#FF099A62" FontSize="28" FontFamily="Arial Black">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <ComboBox x:Name="cbClientes" HorizontalAlignment="Left" Margin="200,243,0,0" VerticalAlignment="Top" Width="406" Height="52" FontSize="28"/>
        <Button x:Name="btnVerEstadoCuenta" Content="Ver cliente" HorizontalAlignment="Left" Margin="858,22,0,0" VerticalAlignment="Top" Height="70" Width="290"  Background="White" Foreground="#FF099A62" FontSize="28" FontFamily="Arial Black" Click="btnVerEstadoCuenta_Click">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="btnModificar" Content="Modificar" HorizontalAlignment="Left" Margin="981,525,0,0" VerticalAlignment="Top" Height="61" Width="208" Background="#FFDDFF0C" FontSize="28" FontFamily="Arial Black" Foreground="#FF099A62" Click="btnModificar_Click" >
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <Label Content="Dia de pago &#xD;&#xA;configurable :" HorizontalAlignment="Left" Margin="645,504,0,0" VerticalAlignment="Top" FontFamily="Arial" Height="95" Width="385" FontSize="30" Foreground="#FF1F1A1A" FontWeight="Bold"/>
        <TextBox x:Name="tbDiaPago" HorizontalAlignment="Left" Margin="858,545,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94" Height="40" FontSize="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
