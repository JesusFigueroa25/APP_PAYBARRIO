<Window x:Class="Presentacion.CreditosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        WindowState="Maximized"
WindowStyle="None"
ResizeMode="NoResize"
        Title="CreditosWindow" Height="768" Width="1366">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Fondo.png"/>
        </Grid.Background>
        <ComboBox x:Name="cbCliente" HorizontalAlignment="Left" Margin="362,136,0,0" VerticalAlignment="Top" Width="290" FontSize="20" Height="40"/>
        <Button x:Name="btnRegresar" Content="Regresar" HorizontalAlignment="Left" Margin="213,20,0,0" VerticalAlignment="Top" Height="74" Width="216" Click="btnRegresar_Click" Background="White" Foreground="#FF099A62" FontSize="36" FontFamily="Arial Black">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <DataGrid
            x:Name="dgCreditos" Margin="200,452,116,46" RenderTransformOrigin="0.5,0.5" Background="White" SelectionChanged="dgCreditos_SelectionChanged"  
            AutoGenerateColumns="True"
            />
        <Button x:Name="btnAgregarCredito" Content="Registrar" HorizontalAlignment="Left" Margin="487,379,0,0" VerticalAlignment="Top" Height="63" Width="196" Click="btnAgregarCredito_Click" Background="#FFDDFF0C" Foreground="#FF099A62" FontSize="35" FontFamily="Arial Black">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="btnTipoCredito" Content="Ver credito" HorizontalAlignment="Left" Margin="975,20,0,0" VerticalAlignment="Top" Height="74" Width="240" Click="btnTipoCredito_Click" Background="White" Foreground="#FF099A62" FontSize="36" FontFamily="Arial Black">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="btnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="725,379,0,0" VerticalAlignment="Top" Height="63" Width="196" Click="btnEliminar_Click" Background="#FFDDFF0C" Foreground="#FF099A62" FontSize="35" FontFamily="Arial Black" >
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <Label Content="Monto Credito" HorizontalAlignment="Left" Margin="110,192,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial Black" Height="48" Width="247" FontSize="30" Foreground="#FF1F1A1A"/>
        <Label Content=" Plazo (meses)" HorizontalAlignment="Left" Margin="99,314,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Height="48" Width="269" RenderTransformOrigin="0.712,0.645" FontSize="30" Foreground="#FF1F1A1A"/>
        <Label Content="TEA %" HorizontalAlignment="Left" Margin="236,255,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Height="48" Width="121" FontSize="28" Foreground="#FF1F1A1A"/>
        <Label Content="Tasa moratorio" HorizontalAlignment="Left" Margin="707,131,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Height="46" Width="262" FontSize="30" Foreground="#FF1F1A1A"/>
        <Label Content="Dias de gracia" HorizontalAlignment="Left" Margin="722,188,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Height="46" Width="248" FontSize="30" Foreground="#FF1F1A1A"/>
        <TextBox x:Name="tbMontoCredito" HorizontalAlignment="Left" Margin="362,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" Height="40" FontSize="30"/>
        <TextBox x:Name="tbPlazo" HorizontalAlignment="Left" Margin="362,322,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" Height="40" FontSize="30"/>
        <TextBox x:Name="tbTEA" HorizontalAlignment="Left" Margin="362,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" Height="40" FontSize="30"/>
        <TextBox x:Name="tbInteresMora" HorizontalAlignment="Left" Margin="976,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="288" Height="40" FontSize="30"/>
        <TextBox x:Name="tbDiasGracia" HorizontalAlignment="Left" Margin="976,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" Height="42" FontSize="30"/>
        <Label Content="Cliente" HorizontalAlignment="Left" Margin="213,133,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial Black" Height="46" Width="144" FontSize="30" Foreground="#FF1F1A1A"/>
        <ComboBox x:Name="cbTipoGracia" HorizontalAlignment="Left" Margin="976,260,0,0" VerticalAlignment="Top" Width="290" RenderTransformOrigin="-0.043,-1.091" FontSize="30" Height="40">
            <ComboBoxItem Content="Total"/>
            <ComboBoxItem Content="Parcial"/>
        </ComboBox>
        <Label Content="Tipo de gracia" HorizontalAlignment="Left" Margin="722,254,0,0" VerticalAlignment="Top" FontFamily="Arial Black" Height="46" Width="280" FontSize="30" Foreground="#FF1F1A1A"/>
        <Button x:Name="btnMenu" Content="Menu" HorizontalAlignment="Left" Margin="605,20,0,0" VerticalAlignment="Top" Height="74" Width="240"   Background="White" Foreground="#FF099A62" FontSize="36" FontFamily="Arial Black" Click="btnMenu_Click" >
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="btnSalir" Content="Button" HorizontalAlignment="Left" Margin="1258,23,0,0" VerticalAlignment="Top" Height="60" Width="82">
            <Button.Foreground>
                <SolidColorBrush Color="Black" Opacity="0"/>
            </Button.Foreground>
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0"/>
            </Button.Background>
        </Button>
        <Label Content="Label" HorizontalAlignment="Left" Margin="1413,474,0,0" VerticalAlignment="Top"/>
        <Label Content="Fecha Compra" HorizontalAlignment="Left" Margin="730,322,0,0" VerticalAlignment="Top" FontSize="28" FontFamily="Arial Black" Height="52" Width="232" Foreground="#FF1F1A1A"/>
        <DatePicker x:Name="dateCompra" HorizontalAlignment="Left" Margin="975,322,0,0" VerticalAlignment="Top" Foreground="Black" Background="White" Height="50" Width="291" FontSize="28"/>

    </Grid>
</Window>
